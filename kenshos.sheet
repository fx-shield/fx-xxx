<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FX shield 検証管理シート</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: #fff1f2; }
        .input-focus:focus { outline: none; border-color: #f43f5e; ring: 2px; ring-color: #f43f5e; }
        input::-webkit-outer-spin-button, input::-webkit-inner-spin-button { -webkit-appearance: none; margin: 0; }
    </style>
</head>
<body class="p-4 md:p-8">
    <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden border border-pink-100">
        
        <!-- ヘッダー -->
        <div class="bg-rose-500 p-6 text-center text-white">
            <h1 class="text-3xl font-bold tracking-tighter italic">FX shield</h1>
            <p class="text-sm mt-1 opacity-90 font-bold">Forex Tester 検証管理シート</p>
        </div>

        <div class="p-6">
            <!-- 検証基本設定 -->
            <section class="mb-6 grid grid-cols-1 md:grid-cols-3 gap-4 bg-rose-50 p-4 rounded-xl border border-rose-100">
                <div>
                    <label class="block text-[10px] text-rose-400 font-bold">検証テーマ</label>
                    <input type="text" placeholder="1h 押し目買い" class="w-full bg-transparent border-b border-rose-200 text-sm p-1 input-focus">
                </div>
                <div>
                    <label class="block text-[10px] text-rose-400 font-bold">通貨ペア</label>
                    <input type="text" placeholder="USDJPY" class="w-full bg-transparent border-b border-rose-200 text-sm p-1 input-focus">
                </div>
                <div>
                    <label class="block text-[10px] text-rose-400 font-bold">検証期間</label>
                    <input type="text" placeholder="2024/01~2024/03" class="w-full bg-transparent border-b border-rose-200 text-sm p-1 input-focus">
                </div>
            </section>

            <!-- 入力セクション -->
            <section class="mb-8">
                <h2 class="text-xs font-bold text-gray-800 mb-4 border-b-2 border-rose-200 pb-1 uppercase">📊 Data Entry</h2>
                <div class="grid grid-cols-2 gap-x-6 gap-y-4">
                    <div class="flex flex-col">
                        <label class="text-[11px] text-gray-500 font-bold mb-1">勝ち数 (回)</label>
                        <input type="number" id="winCount" oninput="calculateStats()" placeholder="15" class="border border-gray-200 rounded-lg p-2 text-sm input-focus bg-gray-50 font-mono">
                    </div>
                    <div class="flex flex-col">
                        <label class="text-[11px] text-gray-500 font-bold mb-1">負け数 (回)</label>
                        <input type="number" id="lossCount" oninput="calculateStats()" placeholder="10" class="border border-gray-200 rounded-lg p-2 text-sm input-focus bg-gray-50 font-mono">
                    </div>
                    <div class="flex flex-col">
                        <label class="text-[11px] text-gray-500 font-bold mb-1">総利益 (¥)</label>
                        <input type="number" id="totalProfit" oninput="calculateStats()" placeholder="100000" class="border border-gray-200 rounded-lg p-2 text-sm input-focus bg-gray-50 font-mono">
                    </div>
                    <div class="flex flex-col">
                        <label class="text-[11px] text-gray-500 font-bold mb-1">総損失 (¥)</label>
                        <input type="number" id="totalLoss" oninput="calculateStats()" placeholder="50000" class="border border-gray-200 rounded-lg p-2 text-sm input-focus bg-gray-50 font-mono">
                    </div>
                </div>
            </section>

            <!-- 統計まとめ (自動計算結果) -->
            <section class="bg-gray-900 text-white p-6 rounded-2xl shadow-xl mb-8">
                <h2 class="text-xs font-bold text-rose-400 mb-6 text-center tracking-[0.2em] border-b border-gray-800 pb-2 uppercase">Analysis Result</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- PF -->
                    <div class="flex flex-col items-center justify-center bg-gray-800/50 rounded-xl p-4 border border-gray-700">
                        <p class="text-[10px] text-gray-400 mb-1 font-bold">PROFIT FACTOR</p>
                        <div id="pfValue" class="text-4xl font-black text-rose-500 mb-1">0.00</div>
                        <div id="pfStatus" class="text-[10px] font-bold px-3 py-1 rounded-full bg-gray-700 text-gray-400">WAITING...</div>
                    </div>
                    <!-- 勝率 -->
                    <div class="flex flex-col items-center justify-center bg-gray-800/50 rounded-xl p-4 border border-gray-700">
                        <p class="text-[10px] text-gray-400 mb-1 font-bold">WIN RATE</p>
                        <div class="flex items-baseline">
                            <span id="winRateValue" class="text-4xl font-black text-white">0</span>
                            <span class="text-lg font-bold ml-1 text-gray-400">%</span>
                        </div>
                        <div id="winRateStatus" class="text-[10px] mt-1 text-gray-500 font-bold">---</div>
                    </div>
                </div>

                <!-- RR比 -->
                <div class="pt-4 border-t border-gray-800">
                    <div class="flex justify-between items-center px-4">
                        <div>
                            <p class="text-[10px] text-gray-500 font-bold">RISK REWARD RATIO</p>
                            <p class="text-xs text-gray-400">平均利益 : 平均損失</p>
                        </div>
                        <div class="text-right">
                            <span class="text-2xl font-black text-rose-400">1 : </span>
                            <span id="rrValue" class="text-2xl font-black text-white">0.0</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- 反省点・まとめセクション -->
            <section class="mb-8">
                <h2 class="text-xs font-bold text-gray-800 mb-4 border-b-2 border-rose-200 pb-1 uppercase">📝 検証のまとめ・反省点</h2>
                <div class="space-y-4">
                    <div>
                        <label class="block text-[11px] text-rose-500 font-bold mb-1">【良かった点・手法の傾向】</label>
                        <textarea placeholder="例：上昇トレンド中の押し目での勝率が高い。4種の神器が揃った時の安定感がすごい。" class="w-full border border-gray-200 rounded-xl p-3 text-sm input-focus bg-gray-50 shadow-inner" rows="3"></textarea>
                    </div>
                    <div>
                        <label class="block text-[11px] text-rose-500 font-bold mb-1">【反省点・負けパターン】</label>
                        <textarea placeholder="例：MAから乖離しているところでエントリーして逆行された。レンジ相場では騙しが多い。" class="w-full border border-gray-200 rounded-xl p-3 text-sm input-focus bg-gray-50 shadow-inner" rows="3"></textarea>
                    </div>
                    <div>
                        <label class="block text-[11px] text-rose-500 font-bold mb-1">【次回の改善アクション】</label>
                        <textarea placeholder="例：上位足のMAの向きをより厳しく見る。勝率が低い時間帯はエントリーを避ける。" class="w-full border border-gray-200 rounded-xl p-3 text-sm input-focus bg-gray-50 shadow-inner" rows="2"></textarea>
                    </div>
                </div>
            </section>
        </div>

        <!-- アフィリエイトリンク 4つ -->
        <footer class="p-6 pt-0 space-y-3">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                <a href="https://clicks.affstrack.com/c?c=1084906&l=en&p=1" target="_blank" class="block bg-blue-600 text-white text-center py-3 rounded-xl text-xs font-bold shadow-md hover:bg-blue-700 transition-all">
                    XM リアル口座
                </a>
                <a href="https://clicks.affstrack.com/c?c=1084906&l=en&p=22" target="_blank" class="block bg-blue-500 text-white text-center py-3 rounded-xl text-xs font-bold shadow-md hover:bg-blue-600 transition-all">
                    XM 追加口座
                </a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                <a href="https://www.forextester.com/idevaffiliate/idevaffiliate.php?id=17940_20_3_36" target="_blank" class="block bg-rose-600 text-white text-center py-3 rounded-xl text-xs font-bold shadow-md hover:bg-rose-700 transition-all">
                    フォレックステスターオンライン
                </a>
                <a href="https://www.forextester.com/idevaffiliate/idevaffiliate.php?id=17940_5_3_11" target="_blank" class="block bg-rose-500 text-white text-center py-3 rounded-xl text-xs font-bold shadow-md hover:bg-rose-600 transition-all">
                    フォレックステスター通常版
                </a>
            </div>
            
            <p class="text-[10px] text-center text-gray-400 leading-relaxed italic px-4 mt-4">
                目標：PF 1.5以上 / 勝率 50%以上 / RR 1:1.5<br>
                FX shield - 4種の神器で守りを固める
            </p>
        </footer>
    </div>

    <!-- アクション -->
    <div class="max-w-2xl mx-auto mt-4 px-2 mb-10 text-center">
        <button onclick="window.print()" class="w-full bg-white text-gray-500 border border-gray-200 py-3 rounded-xl text-xs font-bold shadow-sm mb-2">
            📸 検証結果と反省を記録（スクショ/PDF）
        </button>
        <p class="text-[10px] text-rose-300 px-4">※ 入力データは保存されません。スクショ等で残して、自分の弱点を見直す習慣をつけましょう！</p>
    </div>

    <script>
        function calculateStats() {
            const winCount = parseFloat(document.getElementById('winCount').value) || 0;
            const lossCount = parseFloat(document.getElementById('lossCount').value) || 0;
            const totalProfit = parseFloat(document.getElementById('totalProfit').value) || 0;
            const totalLoss = parseFloat(document.getElementById('totalLoss').value) || 0;

            // 1. PF計算
            const pfDisplay = document.getElementById('pfValue');
            const pfStatus = document.getElementById('pfStatus');
            if (totalLoss > 0) {
                const pf = (totalProfit / totalLoss).toFixed(2);
                pfDisplay.innerText = pf;
                if (pf >= 1.5) {
                    pfStatus.innerText = "SAFE (合格)";
                    pfStatus.className = "text-[10px] font-bold px-3 py-1 rounded-full bg-blue-500 text-white";
                } else if (pf >= 1.0) {
                    pfStatus.innerText = "WARNING (注意)";
                    pfStatus.className = "text-[10px] font-bold px-3 py-1 rounded-full bg-yellow-500 text-black";
                } else {
                    pfStatus.innerText = "DANGER (危険)";
                    pfStatus.className = "text-[10px] font-bold px-3 py-1 rounded-full bg-red-500 text-white";
                }
            } else {
                pfDisplay.innerText = totalProfit > 0 ? "∞" : "0.00";
                pfStatus.innerText = "WAITING...";
                pfStatus.className = "text-[10px] font-bold px-3 py-1 rounded-full bg-gray-700 text-gray-400";
            }

            // 2. 勝率計算
            const totalTrades = winCount + lossCount;
            const winRateDisplay = document.getElementById('winRateValue');
            const winRateStatus = document.getElementById('winRateStatus');
            if (totalTrades > 0) {
                const winRate = ((winCount / totalTrades) * 100).toFixed(1);
                winRateDisplay.innerText = winRate;
                winRateStatus.innerText = winRate >= 50 ? "GOOD BALANCE" : "LOW WIN RATE";
            } else {
                winRateDisplay.innerText = "0";
                winRateStatus.innerText = "---";
            }

            // 3. RR比計算
            const rrDisplay = document.getElementById('rrValue');
            const avgProfit = winCount > 0 ? totalProfit / winCount : 0;
            const avgLoss = lossCount > 0 ? totalLoss / lossCount : 0;
            
            if (avgLoss > 0) {
                const rr = (avgProfit / avgLoss).toFixed(2);
                rrDisplay.innerText = rr;
            } else {
                rrDisplay.innerText = "0.0";
            }
        }
    </script>
</body>
</html>
